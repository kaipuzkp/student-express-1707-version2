extends layout
block extraHeader
    script(src="/javascripts/uploadPbkey.js")
    script(charset="utf-8" src="https://ucarecdn.com/libs/widget/3.1.1/uploadcare.full.min.js")
block content
    form(action='/student/update/'+student._id, method='POST')
        label First Name
        br
        input(name='firstName', type='text', value=student.firstName)
        br
        label Last Name
        br
        input(name='lastName',type='text', value=student.lastName)
        br
        label Age
        br
        input(name='age',type='text', value=student.age)
        br
        input(type="hidden", role="uploadcare-uploader", name="userAvatar", data-images-only)
        br
        input(type='submit', value='Edit')